{
  "name": "Twitch Shark",
  "author": "Meza",
  "description": "Names the shark after your active chatters",
  "version": "VERSION",
  "license": "GPL-3.0",
  "icon": "icon.png",
  "banner": "banner.png",
  "gameVersion": "1.0",
  "requiredByAllPlayers": true,
  "updateUrl": "https://raftmodding.com/api/v1/mods/twitch-shark/version.txt",
  "isModPermanent": false,
  "excludedFiles": [],
  "modSettings": [
    {
      "type": "input",
      "name": "twitchUsername",
      "text": "Twitch Bot Username",
      "mode": "Standard"
    },
    {
      "type": "input",
      "name": "twitchToken",
      "text": "Twitch Bot Oauth Token",
      "mode": "Password"
    },
    {
      "type": "input",
      "name": "twitchChannel",
      "text": "Twitch Channel to use",
      "mode": "Standard"
    },
    {
      "type": "input",
      "name": "twitchDefaultSharkName",
      "text": "The default shark name",
      "mode": "Standard",
      "default": "CHAT TO NAME ME!"
    },
    {
      "type": "checkbox",
      "name": "twitchSubOnly",
      "text": "Subscribers Only",
      "access": "both",
      "default": false
    },
    {
      "type": "checkbox",
      "name": "twitchAnnounceToTwitch",
      "text": "Announce new name to Twitch Chat",
      "access": "both",
      "default": true
    },
    {
      "type": "checkbox",
      "name": "twitchAnnounceToGame",
      "text": "Announce new name to Game Chat",
      "access": "both",
      "default": true
    },
    {
      "type": "checkbox",
      "name": "twitchSharkUseChatColors",
      "text": "Use the colors from chat",
      "access": "both",
      "default": true
    },
    {
      "type": "data",
      "name": "twitchSharkBlacklistDatastore",
      "access": "both",
      "default": {}
    },
    {
      "type": "button",
      "name": "twitchSharkTestTwitch",
      "text": "Test Connection"
    }
  ]
}