{
  "name": "Twitch Shark",
  "author": "Meza",
  "description": "Names the shark after your active chatters",
  "version": "VERSION",
  "license": "GPL-3.0",
  "icon": "icon.png",
  "banner": "banner.png",
  "gameVersion": "1.0",
  "requiredByAllPlayers": true,
  "updateUrl": "https://raftmodding.com/api/v1/mods/twitch-shark/version.txt",
  "isModPermanent": false,
  "excludedFiles": [],
  "modSettings": [
    {
      "type": "input",
      "name": "twitchUsername",
      "text": "Twitch Bot Username",
      "mode": "Standard"
    },
    {
      "type": "input",
      "name": "twitchToken",
      "text": "Twitch Bot Oauth Token",
      "mode": "Password"
    },
    {
      "type": "input",
      "name": "twitchChannel",
      "text": "Twitch Channel to use",
      "mode": "Standard"
    },
    {
      "type": "input",
      "name": "twitchDefaultSharkName",
      "text": "The default shark name",
      "mode": "Standard",
      "default": "CHAT TO NAME THE NEXT SHARK"
    },
    {
      "type": "checkbox",
      "name": "twitchSubOnly",
      "text": "Subscribers Only",
      "access": "both",
      "default": false
    },
    {
      "type": "checkbox",
      "name": "twitchAnnounceToTwitch",
      "text": "Announce new name to Twitch Chat",
      "access": "both",
      "default": true
    },
    {
      "type": "checkbox",
      "name": "twitchAnnounceToGame",
      "text": "Announce new name to Game Chat",
      "access": "both",
      "default": true
    },
    {
      "type": "checkbox",
      "name": "twitchSharkUseChatColors",
      "text": "Use the colors from chat",
      "access": "both",
      "default": true
    },
    {
      "type": "combobox",
      "name": "twitchSharkTimeout",
      "text": "Entries time out after",
      "access": "both",
      "default": "never",
      "values": [ "never", "5 minutes", "10 minutes", "15 minutes", "30 minutes", "1 hour", "2 hours", "4 hours" ]
    },
    {
      "type": "combobox",
      "name": "twitchSharkNameVisibility",
      "text": "Shark Name Visibility",
      "access": "both",
      "default": "normal",
      "values": [ "normal", "above all" ]
    },
    {
      "type": "text",
      "name": "twitchSharkVisibilityIndo",
      "text": "Changes in the visibility setting will only take effect for newly spawned sharks",
      "access": "both"
    },
    {
      "type": "checkbox",
      "name": "twitchDebug",
      "text": "Debug",
      "access": "both",
      "default": false
    },
    {
      "type": "data",
      "name": "twitchSharkBlacklistDatastore",
      "access": "both",
      "default": {}
    },
    {
      "type": "button",
      "name": "twitchSharkTestTwitch",
      "text": "Test Connection"
    },
    {
      "type": "text",
      "name": "twitchSharkMoreInfoLater",
      "text": "There are more controls here once you are in a game",
      "access": "mainmenu"
    },
    {
      "type": "text",
      "name": "twitchSharkEmpty0",
      "text": "",
      "access": "world"
    },
    {
      "type": "text",
      "name": "twitchSharkReconnectInfo0",
      "text": "---------- Session Settings ----------",
      "access": "world"
    },
    {
      "type": "button",
      "name": "twitchSharkResetEntries",
      "text": "Clear The Entries",
      "access": "world"
    },
    {
      "type": "text",
      "name": "twitchSharkEmpty2",
      "text": "",
      "access": "world"
    },
    {
      "type": "text",
      "name": "twitchSharkReconnectInfo1",
      "text": "You only need to reconnect if something goes horribly wrong.",
      "access": "world"
    },
    {
      "type": "text",
      "name": "twitchSharkReconnectInfo2",
      "text": "You do not have to reconnect if you change the general settings",
      "access": "world"
    },
    {
      "type": "button",
      "name": "twitchSharkReconnect",
      "text": "Emergency Reconnect",
      "access": "world"
    }
  ]
}